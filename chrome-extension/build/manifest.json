{
    "name": "Navi",
    "description": "",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab",
        "contextMenus"
    ],
    "action": {
        "default_popup": "index.html"
    },
    "icons": { 
        "16": "icon/icon16.png",
        "48": "icon/icon48.png",
        "128": "icon/icon128.png" 
    },
	"web_accessible_resources": [
		{
			"resources": [ 
				"popup.css" 
			],
			"matches": [ 
				"<all_urls>" 
			]
		}
	]
}
